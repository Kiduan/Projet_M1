<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="isen_brest.projet_m1.ModifMenuActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- Positionnement des sequentiels dans un GridView -->

    </LinearLayout>


    <!-- Bouton "Partager" -->
    <Button
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:onClick="share_click"
        android:text="Partager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/options_btn" />

    <!-- Bouton "Options" -->
    <Button
        android:id="@+id/options_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_margin="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:text="Options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_seq_btn" />

    <!-- Bouton "Ajouter" -->
    <Button
        android:id="@+id/add_seq_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="64dp"
        android:gravity="center"
        android:onClick="add_click"
        android:text="Ajouter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridView
        android:id="@+id/modif_seq_list"
        android:layout_width="wrap_content"
        android:layout_height="948dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:numColumns="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>



